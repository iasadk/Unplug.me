{
  "manifest_version": 3,
  "name": "Unplug.me",
  "description": "Unplug.me: Your productivity ally. Break free from distractions, conquer procrastination, and unlock your full potential with this modern website blocker extension.",
  "options_page": "options.html",
  "background": { "service_worker": "background.bundle.js" },
  "action": {},
  "icons": {
    "128": "unplug-white.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*", "<all_urls>"],
      "js": ["contentScript.bundle.js"],
      "css": ["content.styles.css"]
    }
  ],
  "devtools_page": "devtools.html",
  "web_accessible_resources": [
    {
      "resources": [
        "content.styles.css",
        "unplug-white.png",
        "icon-34.png",
        "unplug-white"
      ],
      "matches": []
    }
  ],
  "permissions": ["tabs", "storage"]
}
